# Chọn các cột cần thiết
data = df[['Address', 'Temp', 'Humidity', 'Precip', 'Windspeed', 'Pressure']]

# Tính giá trị trung bình theo tỉnh thành
radar_df = data.groupby('Address').mean()

# Chuẩn hóa dữ liệu về thang đo [0, 1]
